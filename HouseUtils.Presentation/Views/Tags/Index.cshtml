@model List<Tag>

<div class="container mt-4">
    <h2>Manage Tags</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody id="tags-table-body">
            @foreach (var tag in Model)
            {
                <partial name="_TagRow" model="tag" />
            }
        </tbody>
    </table>

    <button class="btn btn-primary"
            hx-get="/Tags/CreateRow"
            hx-target="#tags-table-body"
            hx-swap="beforeend">
        + Add New Tag
    </button>
</div>